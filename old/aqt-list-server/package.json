{
  "name": "aqt-list-webapp",
  "description": "Web application to run aqt list-qt and list-tool in the browser",
  "author": "David Dalcino <ddalcino@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "typescript": "^4.4.2",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.12.26",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.1.1",
    "prettier": "^2.4.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.21.9"
  },
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rimraf static",
    "docs": "typedoc --entryPoints src/ts/app.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "yarn clean && yarn build && yarn esbuild && yarn copy-files",
    "copy-files": "copyfiles -f src/*.html src/*.css static/",
    "esbuild": "esbuild src/ts/app.ts --bundle --minify --sourcemap=external --outfile=static/bundle.js",
    "esbuild:dev": "esbuild src/ts/app.ts --bundle --outfile=static/bundle.js",
    "esbuild:watch": "esbuild src/ts/app.ts --bundle --watch --outfile=static/bundle.js"
  },

  "dependencies": {
  }
}
